.root {
    width: 50px;
    height: 10px;
    position: absolute;
}

.root > #background {
    background-color: rgba(0, 0, 0, 0.55);
    width: 100%;
    height: 100%;
    flex-direction: row;
    padding-left: 1.7px;
    padding-right: 1.7px;
    padding-top: 1.7px;
    padding-bottom: 1.7px;
}

.root > #background > #bar {
    background-color: rgba(233, 23, 23, 255);
    height: 100%;
}

.hide {
    display: none;
}
